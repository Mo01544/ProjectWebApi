@page "/All-Categories-User"
@inject IService<Category> categoryService 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

<!-- Default values for additional CSS Variables (+ import Bootstrap Icons) -->
<link href="_content/Havit.Blazor.Components.Web.Bootstrap/defaults.css" rel="stylesheet" />

<!-- Blazor CSS Isolation -->
<link href="Your.Blazor.Project.Assembly.Name.styles.css" rel="stylesheet" />

    <h1 style="text-align:center">Our Categories</h1>
<div class="container">

@if(categories != null)
{
<div class="row row-cols-1 row-cols-md-3 g-4 ">
    @foreach (var Category in categories)
        {
 <div class="col">
    <div class="card h-100">
      <img src="/images/@Category.Image" class="card-img-top" alt="Category-Card-Image">
      <div class="card-body">
        <h5 class="card-title">@Category.Name</h5>
      </div>
    </div>
  </div>
        }
</div>

}

</div>
