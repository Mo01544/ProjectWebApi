@page "/All-Products-User"
@inject IService<Product> productService 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

<!-- Default values for additional CSS Variables (+ import Bootstrap Icons) -->
<link href="_content/Havit.Blazor.Components.Web.Bootstrap/defaults.css" rel="stylesheet" />

<!-- Blazor CSS Isolation -->
<link href="Your.Blazor.Project.Assembly.Name.styles.css" rel="stylesheet" />
<div id="carouselExampleSlidesOnly" class="carousel slide" style="margin-bottom:30px" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" style="height:450px" src="https://www.vapulus.com/en/wp-content/uploads/2019/09/shopping.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" style="height:450px" src="https://img.freepik.com/free-photo/girl-holds-fashion-shopping-bag-beauty_1150-13673.jpg?w=2000" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" style="height:450px"  src="https://www.treasures4u.co.za/wp-content/uploads/2019/01/online-shopping-4.1.2019.jpg" alt="Third slide">
    </div>
  </div>
</div>
<AllCategoriesUser/>
<h1 style="text-align:center; margin-top:30px; margin-bottom:30px">Our Products</h1>
<div class="container">
@if(products != null)
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var Product in products)
        {
<div class="col">
  <div class="card h-80">
      <img src="/images/@Product.Image" class="card-img-top" alt="Category-Card-Image">
      <div class="card-body">
            <h2 class="card-title">@Product.Name</h2>
            <h5 class="card-text">Price: @Product.Price <b>$</b></h5>
            <p class="card-text">@Product.Details</p>
            <a href="\Product-Details\@Product.ID" class="btn" style=" background-color:goldenrod;">Details</a>
      </div>
    </div>
</div>
        }
     </div>   
}
</div>